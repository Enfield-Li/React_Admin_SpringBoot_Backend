<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.customers.repository.CustomerMapper">
    <select id="getPaginatedCustomers" resultType="com.example.demo.customers.entity.Customer">
        SELECT * FROM customer
        <!-- <where>
            <if test="category_id != null">category_id = #{category_id}</if>
        </where> -->
        ORDER BY ${sort} ${order}
        LIMIT #{take}
        OFFSET #{start}
    </select>

    <select id="getCustomerCount" resultType="String">
        SELECT count(*) FROM customer
        <!-- <where>
            <if test="category_id != null">category_id = #{category_id}</if>
        </where> -->
    </select>
</mapper>