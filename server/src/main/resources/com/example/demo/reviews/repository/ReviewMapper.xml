<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.reviews.repository.ReviewMapper">
    <select id="getPaginatedReviews" resultType="com.example.demo.reviews.entity.Review">
        SELECT * FROM review
        <where>
            <if test="product_id != null">product_id = #{product_id}</if>
            <if test="customer_id != null">AND customer_id = #{customer_id}</if>
            <if test="status != null">AND status = #{status}</if>
        </where>
        ORDER BY ${sort} ${order}
        LIMIT #{take} 
        OFFSET #{start}
    </select>

    <select id="getReviewCount" resultType="String">
        SELECT count(*) AS count from review
        <where>
            <if test="product_id != null">product_id = #{product_id}</if>
            <if test="status != null">AND status = #{status}</if>
        </where>
    </select>

</mapper>