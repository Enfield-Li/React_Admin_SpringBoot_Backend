<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.invoices.repository.InvoiceMapper">
    <select id="getPaginatedInvoices" resultType="com.example.demo.invoices.entity.Invoice">
        SELECT * 
        FROM invoice 
        <where>
            <if test="date_lte != null">date <![CDATA[ < ]]> #{date_lte}</if>
            <if test="date_gte != null"> AND date > #{date_gte} </if>
        </where>
        ORDER BY ${sort} ${order} 
        LIMIT #{take} OFFSET #{start}
    </select>

